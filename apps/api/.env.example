# API Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV="development"
LOG_LEVEL="debug"

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/pinak"

# Security
JWT_SECRET="your-jwt-secret-here"
ACCESS_TOKEN_EXPIRY="900000" # 15 minutes in milliseconds
REFRESH_TOKEN_EXPIRY="2592000000" # 30 days in milliseconds
FORGOT_PASSWWORD_EXPIRY_MINUTES="15" # 15 minutes

# CORS
CORS_ORIGIN="http://localhost:5173"

# Email Configuration
MAIL_FROM=""
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="465"
SMTP_USER="""
SMTP_PASS=""
SMTP_SECURE="true" # true for 465, false for other ports